{
  "openapi": "3.0.0",
  "info": {
    "title": "Xbox jogo",
    "description": "API para CRUD para exibição de jogos",
    "termsOfService": "",
    "contact": {
      "email": "Robervan e Felipe"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "API de teste"
    },
    {
      "url": "https://xbox-jogo.herokuapp.com",
      "description": "API de produção"
    }
  ],
  "paths": {
    "/users/create": {
      "post": {
        "summary": "cria um novo usuario",
        "description": "rota para um novo usuário",
        "tags": ["Usuarios"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Usuarios"
              },
              "examples": {
                "Usuarios": {
                  "value": {
                    "name": "swagger",
                    "username": "swaggeroo",
                    "email": "swagger@gmail.com",
                    "password": "132eee99045",
                    "cpf": "wrwrwerwe",
                    "isAdmin": "tc388cessssssssaaeate",
                    "imageUrl": "tc388cessssssssaaeate"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "não foi criado usuario"
          },
          "201": {
            "description": "criado usuario",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Usuarios"
                }
              }
            }
          }
        }
      }
    },
    "/users": {
      "get": {
        "summary": "Lista de todos os Usuarios",
        "description": "Rota de todos os Usuarios",
        "tags": ["Usuarios"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "404": {
            "description": "Not found"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Usuarios"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Autentica usuarios",
        "description": "Rota resposavel autenticar usuarios",
        "tags": ["Auth"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Auth"
              },
              "examples": {
                "Auth": {
                  "value": {
                    "email": "swagger@gmail.com",
                    "password": "132eee99045"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Bad Request"
          },
          "201": {
            "description": "logado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Auth"
                }
              }
            }
          }
        }
      }
    },
    "/Jogos/todos-jogos": {
      "get": {
        "sumamry": "lista todos os jogos",
        "description": "Rota responsavel por todos os jogos",
        "tags": ["Jogos"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "404": {
            "description": "não encontrado"
          },
          "200": {
            "description": "todos os jogos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Jogos"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/Jogos/jogo/{id}": {
      "get": {
        "sumamry": "lista jogo por ID",
        "description": "Rota responsavel pelo ID",
        "tags": ["Jogos"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID do jogo",
            "required": true
          }
        ],
        "responses": {
          "404": {
            "description": "não encontrado"
          },
          "200": {
            "description": "jogo por ID",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Jogos"
                }
              }
            }
          }
        }
      }
    },
    "/Jogos/create": {
      "post": {
        "sumamry": " cadastrar jogo",
        "description": "Rota responsavel por criar jogo",
        "tags": ["Jogos"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Jogos"
              },
              "examples": {
                "Jogos": {
                  "value": {
                    "name": "teste swagger",
                    "categoria": "ddd",
                    "description": "dd",
                    "imageUrl": "ss",
                    "ano": 55,
                    "score": 5,
                    "treiler": "d",
                    "gameplay": "dd"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "não foi possível criar jogo"
          },
          "201": {
            "description": "jogo criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Jogos"
                }
              }
            }
          }
        }
      }
    },
    "/Jogos/update/{id}": {
      "put": {
        "sumamry": "Editar jogo pelo Id",
        "description": "Rota responsavel por editar jogo",
        "tags": ["Jogos"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID do jogo",
            "required": true
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Jogos"
              },
              "examples": {
                "Jogos": {
                  "value": {
                    "name": "editado no codigo",
                    "categoria": "ddd",
                    "description": "dd",
                    "imageUrl": "ss",
                    "ano": "fssf",
                    "score": "rwer",
                    "treiler": "d",
                    "gameplay": "dd"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "não foi possível editar jogo"
          },
          "200": {
            "description": "jogo editado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Jogos"
                }
              }
            }
          }
        }
      }
    },
    "/Jogos/delete/{id}": {
      "delete": {
        "sumamry": "Excluir jogo",
        "description": "Rota para excluir jogo",
        "tags": ["Jogos"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID do jogo para deletar",
            "required": true
          }
        ],
        "responses": {
          "400": {
            "description": "não foi possível excluir jogo"
          },
          "200": {
            "description": "jogo excluído com sucesso"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Usuarios": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "cpf": {
            "type": "string"
          },
          "isAdmin": {
            "type": "string"
          },
          "imageUrl": {
            "type": "string"
          }
        }
      },
      "Auth": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "Jogos": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "categoria": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "imageUrl": {
            "type": "string"
          },
          "ano": {
            "type": "string"
          },
          "score": {
            "type": "string"
          },
          "treiler": {
            "type": "string"
          },

          "gameplay": {
            "type": "string"
          }
        }
      }
    }
  }
}
